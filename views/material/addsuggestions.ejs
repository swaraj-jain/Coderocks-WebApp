<%- include('../partials/header add') -%>
    
<div class="container-fluid" style="height: calc(100% - 260px);min-height:689px;margin-top:60px;background: linear-gradient(90deg, rgba(0,50,60,1) 5%, rgba(9,114,121,1) 50%, rgba(0,50,60,1) 95%);">

	<div class="container ">	
		<div class="row" style="margin-top: 1%; color: white;">
			<div style="width: 50% ; margin:40px auto;">
				<form action="/material/addsuggestions" method="POST">
					<!--<input class="form-control" type="text" placeholder="suggestion" name="comment[text]">-->
					<div class="form-group">
						<label for="to1" style="font-size: 22px;font-family:Paprika">Topic:</label>
						<input id="to1" class="form-control" type="text" placeholder="topic" name="topic" style="height: 48px;">
					</div>
					<div class="form-group">
						<label for="to2" style="font-size: 22px;font-family:Paprika">Suggestion:</label>
						<textarea id="to2" class="form-control" type="text" placeholder="suggestion" name="suggestion" rows="4" cols="50"></textarea>						
					</div>					
					<div class="form-group">
						<button class="btn btn-primary btn-block btn-lg">Add Suggestion</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	<div class="container " style="margin-top:1%;margin-bottom:1%; width:100%;">
		
		<% suggestion.forEach(function(comment){ %>
			<%count++;%>
			<!--<% var thiscol=arrcolors[count%6]; %> -->
			<div class="col-md-4" style=" margin-top:1% ;margin-bottom:1% ; padding:1% 1% 1% 1% ;">
				<div style="background-color:<%=arrcolors[count%6]%>;color:black;height:250px;width:100%;border-radius: 15px;padding:1% 1% 1% 1% ;border-style:solid;" >
					<h2 style="font-family:Pangolin;"><%= comment.topic%></h2>
					<div class="container-fluid" style="font-size:20px;font-family:Patrick Hand SC;margin:1%;height:170px;overflow: scroll;">
						<%= comment.text %>
					</div>
				</div>
				<% if(currentUser && (comment.author.id.equals(currentUser._id)||currentUser.role==='moderator')){ %>
					<form id="delet-form" action="addsuggestions/<%= comment._id %>?_method=DELETE" method="POST" >
						<button class="btn btn-sm btn-danger ">Delete</button>
					</form>
				<% } %>
			</div>
		
		<% }); %>
		
	</div>

